package Tetris.Core {	import Tetris.Game.Config;		public class Utils {		/**		 * Translate a block coordinate to the grid coordinate		 * @param Number x		 * @return Number		 */		public static function translate(x) {			return x * Config.grid.size + 20;		}			/**		 * Get a random number between two numbers		 * @param Number min		 * @param Number max		 * @return Number		 */		public static function random(min, max) {			return Math.floor(Math.random() * (max - min + 1) + min);		}			/**		 * Get a random item from an array		 * @param Array stack		 * @return Any		 */		public static function randomItem(stack: Array) {			var max = stack.length - 1;			var index = Utils.random(0, max);				return stack[index];		}			/**		 * Center a set of coordinates horizontally		 * @param Array coordinates		 * @return Array		 */		public static function centerHorizontally(coordinates) {			coordinates.forEach(function(point) {				point[0] += Config.grid.width/2 - 2;			});				return coordinates;		}				/**		 * Make the first character of a string uppercase		 * @param String str		 * @return String		 */		public static function upperCase(str) {			var firstChar:String = str.substr(0, 1); 			var restOfString:String = str.substr(1, str.length); 						return firstChar.toUpperCase() + restOfString.toLowerCase(); 		}	}}